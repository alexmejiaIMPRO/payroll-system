datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}


// Enums para campos restringidos
enum Plant {
  PM
  SSD
  CHU
}

enum Department {
  QCD
  SCD
  RDD
  MMD
  ADD
  ADDIT
  EQD
  CSD
  ADEHS
  AD
  HRD
  FD
}

enum PayrollType {
  CATORCENAL
  SEMANAL
}

enum Source {
  BESTJOBS
  IMPRO
}

enum TransportType {
  PROPIO
  RUTA
}

enum CollarType {
  BLUECOLLAR
  WHITECOLLAR
  GREYCOLLAR
}

enum TransportRoute {
  RUTA_1
  RUTA_2
  RUTA_3
}

enum TransportStop {
  PARADA_1
  PARADA_2
  PARADA_3
}

// Modelo de posici√≥n (cargo)
model Position {
  id           Int        @id @default(autoincrement())
  title        String
  department   Department
  dailySalary  Float
  isFilled     Boolean    @default(false)
  employees    Employee[]
}

// Modelo de empleado
model Employee {
  id               Int             @id @default(autoincrement())
  payrollNumber    Int             @unique
  name             String
  position         Position        @relation(fields: [positionId], references: [id])
  positionId       Int
  shift            String
  nss              String
  rfc              String
  curp             String
  birthDate        DateTime
  birthPlace       String
  gender           String
  bloodType        String
  plant            Plant
  department       Department
  dailySalary      Float
  hireDate         DateTime
  payrollType      PayrollType
  source           Source
  transportRoute   TransportRoute
  transportStop    TransportStop
  costCenter       String
  transportType    TransportType
  bankAccount      String
  collarType       CollarType
}

